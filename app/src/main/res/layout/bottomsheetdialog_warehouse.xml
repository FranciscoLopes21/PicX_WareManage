<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_close"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="100dp"/>

    <TextView
        android:id="@+id/txt_create_Edit_Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Warehouse"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Title"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/txtInputWareHouseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:counterMaxLength="20"
        app:counterEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtWareHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name Warehouse"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLength="20"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/txtInputDescWareHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:counterMaxLength="50"
        app:counterEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtDescWareHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição Warehouse"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:maxLength="50"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="right">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Btn_Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_rightarrowbtn"
            android:text="Confrim"/>
    </LinearLayout>

</LinearLayout>